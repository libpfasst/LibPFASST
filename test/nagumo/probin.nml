&PF_PARAMS
   !  These are internal pfasst variables that must be set
    nlevels  = 3

    !  These are internal pfasst variables that can be reset
    niters = 50   !  default is 5

     !  Type of quadrature nodes (default is 1=Gauss-Lobatto)
     qtype   = 1


     !  optional variables to control termination  (defaults are 0.0)
     abs_res_tol = 1e-11
     rel_res_tol = 1e-11

     PFASST_pred = .true.

     save_residuals = .true.
     save_errors = .false.
/


&PARAMS
  nprob         = 0	 
  ndim          = 1

  ! Nagumo
  nsteps       = 32
  
  poutmod  = 1
  v            = 0.0
  nu           = 1.0

  nvars = 32 64 128
  nnodes = 3 5 9

  Lx = 20.0
  dt           = 0.1
  Tfin = 5
  
  alpha = 1e-6
  max_opt_iter = 200
  tol_grad = 1e-6
  tol_obj  = 1e-6
  
  
  do_imex = 1
  warmstart = 0
  do_mixed = 0
  logfile = "progress.log"
  
  fbase = "pfasst_V"


/
